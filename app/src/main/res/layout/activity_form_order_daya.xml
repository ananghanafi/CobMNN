<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    tools:context="com.masbi.cobmnn.FormOrderDaya">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="16dp"
                android:text="Nama" />

            <EditText
                android:id="@+id/namaFormDaya"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="nama" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="16dp"
                android:text="Alamat" />

            <EditText
                android:id="@+id/alamatFormDaya"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="alamat" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="16dp"
                android:text="No Handphone" />
            <EditText
                android:id="@+id/nohpFormDaya"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:hint="no.hp" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="16dp"
                android:text="No Pelanggan/No Meter" />

            <EditText
                android:id="@+id/noFormplg"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:hint="no pelanggan/no meter" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="16dp"
                android:text="Pilih Daya" />

            <com.jaredrummler.materialspinner.MaterialSpinner
                android:id="@+id/spinnerBaru"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="16dp"
                android:paddingTop="16dp"
                app:ms_dropdown_height="wrap_content"
                app:ms_dropdown_max_height="350dp" />

            <Button
                android:id="@+id/btCekBiaya"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/colorPrimary"
                android:onClick="btCekBiayaDaya"
                android:text="Cek Biaya (telp gerai)" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="16dp">

            </LinearLayout>

            <Button
                android:id="@+id/btPesanTambahDaya"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/colorAccent"
                android:onClick="btPesanTambahDaya"
                android:text="Pesan" />

        </LinearLayout>
    </ScrollView>
</android.support.constraint.ConstraintLayout>
