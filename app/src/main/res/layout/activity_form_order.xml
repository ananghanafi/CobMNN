<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.masbi.cobmnn.FormOrder">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingTop="16dp"
                    android:text="Nama" />

                <EditText
                    android:id="@+id/namaForm"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="nama" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingTop="16dp"
                    android:text="Alamat" />

                <EditText
                    android:id="@+id/alamatForm"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="alamat" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingTop="16dp"
                    android:text="No Handphone" />

                <EditText
                    android:id="@+id/nohpForm"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="no.hp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingTop="16dp"
                    android:text="Pilih Daya" />

                <com.jaredrummler.materialspinner.MaterialSpinner
                    android:id="@+id/spinnerBaru"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingBottom="16dp"
                    android:paddingTop="16dp"
                    app:ms_dropdown_height="wrap_content"
                    app:ms_dropdown_max_height="350dp" />

                <Button
                    android:id="@+id/btCekBiaya"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/colorPrimary"
                    android:onClick="btCekBiayaForm"
                    android:text="Cek Biaya" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:paddingBottom="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:paddingBottom="5dp"
                        android:text="Biaya"
                        android:textColor="@android:color/black"
                        android:textSize="18dp" />


                    <RelativeLayout

                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:background="@color/colorAccent">

                        <TextView
                            android:id="@+id/harga"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:textAppearance="?android:attr/textAppearance"
                            android:textColor="#000000"
                            android:textSize="15sp" />
                    </RelativeLayout>
                </LinearLayout>


                <Button
                    android:id="@+id/btPesanForm"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/colorAccent"
                    android:onClick="btPesanForm"
                    android:text="Pesan" />

            </LinearLayout>
        </ScrollView>
    </LinearLayout>
</android.support.constraint.ConstraintLayout>
